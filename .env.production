# ====================================
# ProSai Client - Production Environment
# ====================================

# Application Configuration
NEXT_PUBLIC_APP_NAME=ProSai Client
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=production

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.prosai.com
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_VERSION=v1

# Authentication
NEXTAUTH_URL=https://prosai.com
NEXTAUTH_SECRET=production-secret-key-change-this
JWT_SECRET=production-jwt-secret-change-this

# Database Configuration
DATABASE_URL=postgresql://username:password@production-db:5432/prosai_db
DATABASE_HOST=production-db
DATABASE_PORT=5432
DATABASE_NAME=prosai_db
DATABASE_USER=username
DATABASE_PASSWORD=password

# External Services
EMAIL_SERVICE_PROVIDER=sendgrid
SENDGRID_API_KEY=your-production-sendgrid-api-key
EMAIL_FROM=noreply@prosai.com
EMAIL_FROM_NAME=ProSai Client

STORAGE_PROVIDER=aws
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=prosai-client-production

# Third Party Services
NEXT_PUBLIC_GA_ID=your-production-google-analytics-id
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key

STRIPE_PUBLISHABLE_KEY=pk_live_your-production-stripe-key
STRIPE_SECRET_KEY=sk_live_your-production-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-production-stripe-webhook-secret

# Production Configuration
NODE_ENV=production
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_LOG_LEVEL=error

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# Performance & Security
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=1000
NEXT_PUBLIC_RATE_LIMIT_WINDOW=900000

# Monitoring & Logging
SENTRY_DSN=your-production-sentry-dsn
LOGTAIL_TOKEN=your-production-logtail-token 