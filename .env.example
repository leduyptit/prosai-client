# ====================================
# ProSai Client Environment Variables
# ====================================

# ====================================
# Application Configuration
# ====================================
NEXT_PUBLIC_APP_NAME=ProSai Client
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=development

# ====================================
# API Configuration
# ====================================
NEXT_PUBLIC_API_BASE_URL=https://api-v1.prosai.vn
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_API_VERSION=v1

# ====================================
# Authentication
# ====================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here
JWT_SECRET=your-jwt-secret-key-here-change-in-production

# ====================================
# Database Configuration
# ====================================
DATABASE_URL=postgresql://username:password@localhost:5432/prosai_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=prosai_db
DATABASE_USER=username
DATABASE_PASSWORD=password

# ====================================
# External Services
# ====================================
# Email Service (SendGrid, AWS SES, etc.)
EMAIL_SERVICE_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@prosai.com
EMAIL_FROM_NAME=ProSai Client

# File Storage (AWS S3, Cloudinary, etc.)
STORAGE_PROVIDER=aws
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=prosai-client-storage

# ====================================
# Third Party Services
# ====================================
# Google Analytics
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Stripe (Payment)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# ====================================
# Development Configuration
# ====================================
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_LOG_LEVEL=debug

# ====================================
# Feature Flags
# ====================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# ====================================
# Performance & Security
# ====================================
NEXT_PUBLIC_MAX_FILE_SIZE=10485760 # 10MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW=900000 # 15 minutes

# ====================================
# Monitoring & Logging
# ====================================
SENTRY_DSN=your-sentry-dsn
LOGTAIL_TOKEN=your-logtail-token 

# Zalo OAuth Configuration (Server-side only)
ZALO_APP_ID=your_zalo_app_id_here
ZALO_APP_SECRET=your_zalo_app_secret_here
ZALO_SECRET_KEY=your_zalo_secret_key_here

# Other OAuth Providers (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret 